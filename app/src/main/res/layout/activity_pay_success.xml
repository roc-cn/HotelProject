<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    tools:ignore="HardcodedText,PxUsage"
    tools:context="com.sun.hotelproject.moudle.PaySussecsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent80">
        <include layout="@layout/toolbar_null"
            android:id="@+id/toolbar"/>
        <include layout="@layout/speed_of_progress"
            android:visibility="gone"
            android:id="@+id/linear_sp1"/>
        <include layout="@layout/speed_of_progress2"
            android:visibility="gone"
            android:id="@id/linear_sp2"/>
        <include layout="@layout/speed_of_progress3"
            android:visibility="gone"
            android:id="@id/linear_sp3"/>
        <include layout="@layout/speed_of_progress4"
            android:visibility="gone"
            android:id="@id/linear_sp4"/>
        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="120px"
            android:textSize="72px"
            android:textColor="#00d10d"
            android:layout_centerHorizontal="true"
            android:text="支付成功"
             />
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_below="@id/success"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118px"
            android:textSize="46px"
            android:textColor="@color/colorWrite"
            android:layout_centerHorizontal="true"
            android:text="正在办理续房，请稍候..."/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_marginTop="44px"

            android:textSize="46px"
            android:textColor="@color/colorWrite"
            android:layout_centerHorizontal="true"
            android:text="续房成功，欢迎入住"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="1410px"
            android:layout_height="276px"
            android:layout_below="@id/tv2"
            android:layout_marginTop="110px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_advertising"
            tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_below="@id/success"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="118px"
                android:textSize="46px"
                android:textColor="@color/colorWrite"
                android:layout_centerHorizontal="true"
                android:text="欢迎下次入住."/>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3"
                android:layout_marginTop="44px"
                android:textSize="30px"
                android:textColor="@color/colorWrite"
                android:layout_centerHorizontal="true"
                android:text="welcome to"/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_marginTop="40px"
                android:textSize="100px"
                android:textColor="@color/colorWrite"
                android:layout_centerHorizontal="true"
                android:text="Monalisa Hotel"/>

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv5"
                android:layout_marginTop="40px"
                android:textSize="24px"
                android:textColor="@color/colorWrite"
                android:layout_centerHorizontal="true"
                android:text="A place to experience and enjoy the life"/>
        </RelativeLayout>

        <Button
            android:id="@+id/fial"
            android:layout_width="200px"
            android:visibility="gone"
            android:layout_height="66px"
            android:layout_marginTop="155px"
            android:layout_marginRight="62px"
            android:layout_alignParentRight="true"
            android:background="@drawable/btnclick_shape"
            android:textSize="30px"
            android:textColor="@color/Swrite"
            android:text="重试"
            />

    </RelativeLayout>


</RelativeLayout>
