<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    tools:ignore="PxUsage,HardcodedText,RtlHardcoded"
    tools:context="com.sun.hotelproject.moudle.OrderDetailsActivity">
    <include layout="@layout/toolbar_null"
        android:id="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="1818px"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_height="846px"
        android:orientation="horizontal"
        android:background="@drawable/write_shape"
        >
        <ImageView
            android:layout_width="976px"
            android:layout_height="782px"
            android:layout_marginTop="32px"
            android:layout_marginLeft="30px"
            android:background="@drawable/beijing"
            />

        <LinearLayout
            android:layout_width="594px"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:layout_marginTop="35px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monalisa Hotel"
                android:textColor="@color/colorBlack"
                android:textSize="60px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27px"
                android:text="豪华总裁套餐房"
                android:textColor="@color/colorBlack"
                android:textSize="40px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30px">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入住时间" />

                <TextView
                    android:id="@+id/check_inTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="49px"
                    android:layout_toRightOf="@id/tv" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_marginTop="49px"
                    android:text="床型"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="49px"
                    android:layout_toRightOf="@id/tv1"
                    android:text="1张双人床1.8m\n2张单人床1.4m"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_marginLeft="63px"
                    android:layout_marginTop="49px"
                    android:layout_toRightOf="@id/tv2"
                    android:text="面积"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="49px"
                    android:layout_toRightOf="@id/tv3"
                    android:text="38m"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="49px"
                    android:text="可住"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv5"
                    android:layout_marginLeft="27px"
                    android:layout_toRightOf="@id/tv5"
                    android:text="2人"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv3"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="49px"
                    android:layout_toRightOf="@id/tv6"
                    android:text="楼层"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv5"
                    android:layout_marginLeft="27px"
                    android:layout_toRightOf="@id/tv7"
                    android:text="4-20"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="19px"
                    android:text="网络"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv9"
                    android:text="暂无信息"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv7"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="19px"
                    android:text="电话"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv11"
                    android:text="暂无信息"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv9"
                    android:layout_marginTop="19px"
                    android:text="窗户"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv9"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv13"
                    android:text="有窗"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv7"
                    android:layout_below="@id/tv9"
                    android:layout_marginTop="19px"
                    android:text="窗景"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv9"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv15"
                    android:text="暂无信息"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv13"
                    android:layout_marginTop="19px"
                    android:text="早餐"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv13"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv17"
                    android:text="无早"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv7"
                    android:layout_below="@id/tv13"
                    android:layout_marginTop="19px"
                    android:text="房间"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv13"
                    android:layout_marginLeft="27px"
                    android:layout_marginTop="19px"
                    android:layout_toRightOf="@id/tv19"
                    android:text="1间"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv20"
                    android:layout_marginTop="48px"
                    android:text="备注:该楼层为无烟楼，房间1.8米大床，房间朝向小区,\n
房间配有55寸液晶电视，免费矿泉水和茶包."
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv21"
                    android:layout_marginTop="102px"
                    android:text="共计："
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv21"
                    android:layout_alignBaseline="@id/tv22"
                    android:layout_toRightOf="@id/tv22"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="40px" />

                <Button
                    android:id="@+id/confirm_pay"
                    android:layout_width="208px"
                    android:layout_height="64px"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv21"
                    android:layout_marginTop="90px"
                    android:background="@drawable/blue_shape"
                    android:text="确认支付"
                    android:textColor="@color/colorWrite"
                    android:textSize="30px" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
