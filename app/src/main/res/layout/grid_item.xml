<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="870px"
    android:layout_height="221px"
    android:padding="10px"
    android:layout_margin="10px"
    android:orientation="horizontal"
    tools:ignore="PxUsage,RtlHardcoded，HardcodedText">

    <ImageView
        android:id="@+id/recycler_image"
        android:layout_width="396px"
        android:layout_height="221px"
        android:src="@drawable/beijing"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:layout_width="451px"
        android:layout_height="204px"

        android:layout_marginLeft="10px"
        android:layout_toRightOf="@id/recycler_image"
        android:layout_alignBottom="@id/recycler_image"
        >
        <TextView
            android:id="@+id/house_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25px"
            android:textColor="@color/colorBlack"
            android:text="豪华客房"
            />
        <TextView
            android:id="@+id/house_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textSize="20px"
            android:textColor="@color/colorBlack"
            android:layout_below="@id/house_type"
            android:text="房间号"/>
        <TextView
            android:id="@+id/house_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textSize="20px"
            android:textColor="@color/colorSgray"
            android:layout_below="@id/house_num"
            android:text="1张双人床1.8m-2张单人床1.4m"/>

        <TextView
            android:id="@+id/house_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="￥0.01"
            android:textColor="@color/red"
            android:textSize="30px" />

        <Button
            android:id="@+id/reserve"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="预定"
            android:textSize="20px"
            android:textColor="@color/colorWrite"
            android:background="@drawable/blue_shape"/>
    </RelativeLayout>


</RelativeLayout>