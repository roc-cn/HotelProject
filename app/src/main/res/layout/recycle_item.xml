<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="557px"
    android:layout_marginLeft="26px"
    android:layout_marginRight="26px"
    tools:ignore="HardcodedText,PxUsage,RtlHardcoded"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
<!--房型item-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/write_shape">
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px"
                android:layout_marginLeft="28px"
                android:textSize="22px"
                android:textColor="@color/colorBlack"
                android:text="豪华客房"/>
            <ImageView
                android:id="@+id/img"
                android:layout_width="517px"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_height="263px"
                android:layout_marginTop="18px"
                android:layout_below="@id/type"
                android:src="@drawable/beijing"/>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="467px"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                android:layout_marginLeft="30px"
                android:layout_below="@id/img">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22px"
                    android:text="床型"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv1"
                    android:layout_marginLeft="27px"
                    android:lines="2"
                    android:textSize="22px"
                    android:text="1张双人床1.8m\n2张单人床1.4m"/>

                <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_marginLeft="63px"
                android:layout_toRightOf="@id/tv2"
                android:text="面积"/>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv3"
                    android:layout_marginLeft="27px"
                    android:textSize="22px"
                    android:text="38m"/>
                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="48px"
                    android:textSize="22px"
                    android:text="可住"/>
                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv5"
                    android:layout_marginLeft="27px"
                    android:layout_alignBottom="@id/tv5"
                    android:textSize="22px"
                    android:text="2人"/>

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_toRightOf="@id/tv6"
                    android:layout_marginTop="49px"
                    android:layout_alignLeft="@id/tv3"
                    android:textSize="22px"
                    android:text="楼层"/>
                <TextView
                    android:id="@+id/floor_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv7"
                    android:layout_marginLeft="27px"
                    android:layout_alignBottom="@id/tv5"
                    android:textSize="22px"
                    android:text="4-20"/>

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="18px"
                    android:textSize="22px"
                    android:text="网络"/>
                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv9"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="19px"
                    android:layout_marginLeft="27px"
                    android:textSize="22px"
                    android:text="暂无信息"/>
                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="19px"
                    android:layout_alignLeft="@id/tv7"
                    android:textSize="22px"
                    android:text="电话"/>
                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv11"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="19px"
                    android:layout_marginLeft="27px"
                    android:textSize="22px"
                    android:text="暂无信息"/>

                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv9"
                    android:layout_marginTop="18px"
                    android:textSize="22px"
                    android:text="窗户"/>
                <TextView
                    android:id="@+id/tv14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv13"
                    android:layout_below="@id/tv9"
                    android:layout_marginTop="19px"
                    android:layout_marginLeft="27px"
                    android:textSize="22px"
                    android:text="有窗"/>
                <TextView
                    android:id="@+id/tv15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv9"
                    android:layout_marginTop="19px"
                    android:layout_alignLeft="@id/tv7"
                    android:textSize="22px"
                    android:text="窗景"/>
                <TextView
                    android:id="@+id/tv16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv15"
                    android:layout_below="@id/tv9"
                    android:layout_marginTop="19px"
                    android:layout_marginLeft="27px"
                    android:textSize="22px"
                    android:text="暂无信息"/>

                <TextView
                    android:id="@+id/tv17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv13"
                    android:layout_marginTop="18px"
                    android:textSize="22px"
                    android:text="早餐"/>
                <TextView
                    android:id="@+id/tv18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv17"
                    android:layout_below="@id/tv13"
                    android:layout_marginTop="19px"
                    android:layout_marginLeft="27px"
                    android:textSize="22px"
                    android:text="无早"/>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/relative"
                android:layout_marginLeft="22px"
                android:layout_marginRight="22px"
                android:layout_marginTop="18px"
                android:background="#80999999"/>
            <Button
                android:id="@+id/check"
                android:layout_width="208px"
                android:layout_height="63px"
                android:layout_marginTop="15px"
                android:layout_marginBottom="15px"
                android:background="@drawable/blue_shape"
                android:layout_below="@id/line"
                android:textSize="30px"
                android:layout_alignRight="@id/img"
                android:layout_marginRight="20px"
                android:textColor="@color/colorWrite"
                android:text="确认入住"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="237px"
                android:layout_height="37px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="30px"
                android:textSize="25px"
                android:visibility="gone"
                android:layout_marginTop="22px"
                android:textColor="#fa5858"
                android:text="￥931含税价￥1086"
               />


