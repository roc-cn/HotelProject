<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing3"
    tools:context="com.sun.hotelproject.moudle.CheckOutActivity">
    <include layout="@layout/toolbar_null"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/logo"/>
    <RelativeLayout
        android:id="@+id/relat_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:layout_margin="@dimen/dp_100">

        <Button
            android:id="@+id/readCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWrite"
            android:background="@drawable/butbg5"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="读卡"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/fk"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWrite"
            android:textSize="@dimen/sp_30"
            android:text="请将房卡放入感应区"/>

        <TextView
            android:id="@+id/card_tv"
            android:layout_width="match_parent"
            android:layout_below="@id/tv1"
            android:scrollbars="vertical"
            android:text=""
            android:textSize="@dimen/sp_20"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWrite"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>
