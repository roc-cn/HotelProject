<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    tools:ignore="HardcodedText,PxUsage"
    tools:context="com.sun.hotelproject.moudle.ChoiceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:orientation="horizontal">
        <include layout="@layout/toolbar_null"
            android:id="@+id/toolbar"/>
        <include layout="@layout/speed_of_progress4"
            android:id="@+id/linear_sp4"/>
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Swrite"
            android:text="正在查询网上预定信息"
            android:textSize="50px"
            android:layout_marginTop="98dp"
            />
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Swrite"
            android:text="请输入您的手机号"
            android:textSize="50px"
            android:layout_marginTop="40px"/>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:layout_marginTop="198dp"
            android:background="@drawable/phone_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:background="@drawable/backsharp2"
                android:gravity="center_vertical"
                android:textColor="@color/Blcak"
                android:textSize="20sp"
                android:layout_height="44dp"
               />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/code_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textColor="@color/Swrite"/>
            <LinearLayout
                android:id="@+id/code_linear"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="44dp"
               >
                <TextView
                    android:id="@+id/code_tv"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Blcak"
                    android:textSize="20sp"
                    android:background="@drawable/backsharp"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/code_bt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="2"
                    android:text="获取验证码"
                    android:textSize="20sp"
                    android:textColor="@color/Swrite"
                    android:background="@drawable/btn_bg3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/num_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@drawable/num_7"/>
                <Button
                    android:id="@+id/num_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@drawable/num_8"/>
                <Button
                    android:id="@+id/num_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:background="@drawable/num_9"/>
                <Button
                    android:id="@+id/num_clean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clean"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/num_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/num_4"/>
                <Button
                    android:id="@+id/num_5"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/num_5"/>
                <Button
                    android:id="@+id/num_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/num_6"/>
                <Button
                    android:id="@+id/num_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"

                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/num_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/num_1"/>
                <Button
                    android:id="@+id/num_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/num_2"/>
                <Button
                    android:id="@+id/num_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/num_3"/>
                <Button
                    android:id="@+id/num_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="确定"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="@color/Swrite"
                    android:background="@drawable/btn_bg3"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

